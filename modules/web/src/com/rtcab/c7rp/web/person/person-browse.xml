<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="personsTable"
        messagesPack="com.rtcab.c7rp.web.person">
    <data readOnly="true">
        <collection id="personsDc"
                    class="com.rtcab.c7rp.entity.Person"
                    view="_local">
            <loader id="personsDl">
                <query>
                    <![CDATA[select e from c7rp_Person e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="personsTable"
            spacing="true">
        <filter id="filter"
                applyTo="personsTable"
                dataLoader="personsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="personsTable"
                    width="100%"
                    dataContainer="personsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="firstName"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="personsTable.create"/>
                <button id="editBtn" action="personsTable.edit"/>
                <button id="removeBtn" action="personsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
